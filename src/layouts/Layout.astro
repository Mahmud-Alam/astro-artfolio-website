---
import Nav from "../components/Nav";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Digital Artist Services, accessible for everyone."
    />
    <meta name={title} />
  </head>
  <body>
    <main>
      <Nav client:load />
      <slot />
      <!-- All children will pass here -->
       <Footer/>
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
